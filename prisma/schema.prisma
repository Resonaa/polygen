datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int @id @default(autoincrement())
  username  String @unique
  password  String
  createdAt DateTime @default(now())

  posts     Post[]
  comments  Comment[]
  access    Int @default(1)
}

model Announcement {
  id        Int @id @default(autoincrement())
  title     String
  content   String
}

model Post {
  id      Int @id @default(autoincrement())
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author     User   @relation(fields: [authorname], references: [username], onDelete: Cascade, onUpdate: Cascade)
  authorname String

  comments Comment[]
}

model Comment {
  id      Int @id @default(autoincrement())
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author     User   @relation(fields: [authorname], references: [username], onDelete: Cascade, onUpdate: Cascade)
  authorname String

  parent   Post @relation(fields: [parentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  parentId Int
}