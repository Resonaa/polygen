datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int @id @default(autoincrement())
  username  String @unique
  password  String
  createdAt DateTime @default(now())

  posts     Post[]
  comments  Comment[]
  access    Int @default(1)

  bio       String @default("")

  favouredPosts Post[] @relation("favour")

  score     Score?
}

model Announcement {
  id        Int @id @default(autoincrement())
  title     String
  content   String
}

model Post {
  id      Int @id @default(autoincrement())
  content String

  createdAt DateTime @default(now())

  user     User   @relation(fields: [username], references: [username], onDelete: Cascade, onUpdate: Cascade)
  username String

  comments Comment[]

  viewCount Int @default(0)

  favouredBy User[] @relation("favour")
}

model Comment {
  id      Int @id @default(autoincrement())
  content String

  createdAt DateTime @default(now())

  user     User   @relation(fields: [username], references: [username], onDelete: Cascade, onUpdate: Cascade)
  username String

  parent   Post @relation(fields: [parentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  parentId Int
}

model Score {
  id      Int @id @default(autoincrement())

  user     User   @relation(fields: [username], references: [username], onDelete: Cascade, onUpdate: Cascade)
  username String @unique

  turns    Int
  speed    Float
  score    Float
  updatedAt DateTime @updatedAt
}