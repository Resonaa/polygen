{
  "name": "polygen",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:watch": "remix watch",
    "dev:start": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register server/index.ts --files",
    "start": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register server/index.ts --files",
    "typecheck": "tsc -b",
    "generate:css": "tailwindcss -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "migrate": "npx prisma migrate dev"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/server/build"
  ],
  "dependencies": {
    "@prisma/client": "latest",
    "@remix-run/node": "latest",
    "@remix-run/react": "latest",
    "@remix-run/express": "latest",
    "bcryptjs": "latest",
    "isbot": "latest",
    "react": "latest",
    "react-dom": "latest",
    "semantic-ui-css": "latest",
    "semantic-ui-react": "latest",
    "tiny-invariant": "latest",
    "compression": "latest",
    "cross-env": "latest",
    "dotenv": "latest",
    "express": "latest",
    "morgan": "latest",
    "socket.io": "latest",
    "socket.io-client": "latest",
    "vditor": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "devDependencies": {
    "@remix-run/dev": "latest",
    "@remix-run/eslint-config": "latest",
    "@types/bcryptjs": "latest",
    "@types/eslint": "latest",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/express": "latest",
    "@types/compression": "latest",
    "@types/morgan": "latest",
    "eslint": "latest",
    "npm-run-all": "latest",
    "prisma": "latest",
    "tailwindcss": "latest",
    "tsconfig-paths": "latest"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
